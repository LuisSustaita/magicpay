<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿En que te podemos ayudar?"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnHowToRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Como recibir un pago?"
        android:textColor="@android:color/white"
        android:background="@drawable/borde_redondo"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnHowToWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Como enviar un pago?"
        android:textColor="@android:color/white"
        android:background="@drawable/borde_redondo"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnContactanos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hablar con una parsona"
        android:textColor="@android:color/white"
        android:background="@drawable/borde_redondo"
        android:layout_marginTop="10dp"/>

</LinearLayout>